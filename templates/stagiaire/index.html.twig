{% extends 'base.html.twig' %}

{% block title %}Liste stagiaires{% endblock %}

{% block bread %}
    <li class="breadcrumb-item"><a href="{{path("home")}}">Accueil</a></li>
    <li class="breadcrumb-item active">Stagiaires</li>
{% endblock %}

{% block body %}

<h1>Liste des stagiaires</h1>


<table class="table table-center table-responsive">
    <thead>
        <tr>
            <th>Nom </th>
            <th>E-mail</th>
            <th>
                <a href="{{path("new_stagiaire")}}">Ajouter un stagiaire</a>
            </th>
        </tr>
    </thead>
    <tbody>
        {% for stagiaire in stagiaires %}
            <tr class="table-primary">
                <th>
                    <a href="{{path("stagiaire", {id: stagiaire.id})}}">{{stagiaire.fullname}}</a>
                </th>
                <td>{{stagiaire.email}}</td>
                <td>ajoutÃ© par {{stagiaire.user.fullname}} </td>
            </tr>
        {% endfor %}
    </tbody>
{% endblock %}
