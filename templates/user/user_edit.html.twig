{% extends "base.html.twig" %}

{% block bread %}
    <li class="breadcrumb-item"><a href="{{path("home")}}">Home</a></li>
    <li class="breadcrumb-item"><a href="{{path("profile")}}">Profil</a></li>
    <li class="breadcrumb-item"><a href="{{path("user_list")}}">Users</a></li>
    <li class="breadcrumb-item"><a href="{{path("user_detail", {id: user.id})}}">Detail de : {{user.fullname}}</a></li>
    <li class="breadcrumb-item active">Modification</li>
{% endblock %}

{% block body %}

    <h1>Modification d'user</h1>
    <hr>

    {{form_start(form)}}
        <div class="form-group">
            {{form_row(form.nom)}}
        </div>
        
        <div class="form-group">
            {{form_row(form.prenom)}}
        </div>

        <input class="btn btn-primary" type="submit" value="Modifier">
    {{form_end(form)}}

{% endblock %}