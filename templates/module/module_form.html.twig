{% extends "base.html.twig" %}

{% block bread %}
    <li class="breadcrumb-item"><a href="{{path("home")}}">Accueil</a></li>
    <li class="breadcrumb-item"><a href="{{path("categories")}}">Categories de modules</a></li>
    <li class="breadcrumb-item active">Formulaire Module</li>
{% endblock %}


{% block body %}

{% if edit %}
    <h1>Modifier le module</h1>
{% else %}
    <h1>Ajout d'un module</h1>
{% endif %}


{{form_start(form, {attr: {class: "user-form"}})}}

    <div class="form-group">
        {{form_row(form.nom)}}
    </div>

    <div class="form-group">
        {{form_row(form.description)}}
    </div>

    <div class="form-group">
        {{form_row(form.categorie)}}
    </div>

    
    {% if edit %}
            <input class="btn btn-success" type="submit" value="modifier">
        {% else %}
            <input class="btn btn-success" type="submit" value="Ajouter">
    {% endif %}
    
{{form_end(form)}}

{% endblock %}