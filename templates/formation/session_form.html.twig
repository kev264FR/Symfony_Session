{% extends "base.html.twig" %}

{% block bread %}
    <li class="breadcrumb-item"><a href="{{path("home")}}">Home</a></li>
    <li class="breadcrumb-item"><a href="{{path("sessions")}}">Sessions</a></li>
    <li class="breadcrumb-item active">Formulaire de formation</li>
{% endblock %}

{% block body %}

    <h1>Ajouter une session de formation</h1>
    <hr>

    {{form_start(form, {attr: {class: "user-form"}})}}

        <div class="form-group">
            {{form_row(form.intitule)}}
        </div>

        <div class="form-group">
            {{form_row(form.dateDebut)}}
        </div>

        <div class="form-group">
            {{form_row(form.dateFin)}}
        </div>

        <div class="form-group">
            {{form_row(form.place)}}
        </div>
        
        <input class="btn btn-primary" type="submit" value="Ajouter">
    {{form_end(form)}}

{% endblock %}